<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tableau de bord | Multi-Billeterie</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/main.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">
                <i class="fas fa-ticket-alt me-2"></i>
                Multi-Billeterie
            </a>
            
            <div class="navbar-nav ms-auto">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user me-1"></i>
                        <span id="userName">Mon compte</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/profile">
                            <i class="fas fa-user-edit me-2"></i>Mon profil
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#" onclick="logout()">
                            <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                        </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/dashboard">
                                <i class="fas fa-tachometer-alt me-2"></i>
                                Tableau de bord
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/tickets">
                                <i class="fas fa-ticket-alt me-2"></i>
                                Mes tickets
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/events">
                                <i class="fas fa-calendar-alt me-2"></i>
                                Événements
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/providers">
                                <i class="fas fa-building me-2"></i>
                                Prestataires
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile">
                                <i class="fas fa-user-cog me-2"></i>
                                Paramètres
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <i class="fas fa-tachometer-alt me-2"></i>
                        Tableau de bord
                    </h1>
                </div>

                <!-- Welcome Message -->
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Bienvenue !</strong> Découvrez tous les événements disponibles et gérez vos tickets.
                </div>

                <!-- Quick Stats -->
                <div class="row mb-4">
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Tickets actifs
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="activeTickets">0</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-ticket-alt fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-success shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                            Événements suivis
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="followedEvents">0</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-heart fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-info shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                            Total dépensé
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalSpent">0 €</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-euro-sign fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-warning shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                            Événements à venir
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="upcomingEvents">0</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Tickets -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-ticket-alt me-2"></i>
                            Mes derniers tickets
                        </h6>
                        <a href="/tickets" class="btn btn-sm btn-primary">
                            Voir tous mes tickets
                        </a>
                    </div>
                    <div class="card-body">
                        <div id="recentTickets">
                            <div class="text-center py-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Chargement...</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Upcoming Events -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-calendar-alt me-2"></i>
                            Événements recommandés
                        </h6>
                        <a href="/events" class="btn btn-sm btn-primary">
                            Voir tous les événements
                        </a>
                    </div>
                    <div class="card-body">
                        <div id="recommendedEvents">
                            <div class="text-center py-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Chargement...</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script>
        // Check authentication
        const user = MultiBilleterie.getCurrentUser();
        if (!user) {
            window.location.href = '/auth/login';
        } else {
            document.getElementById('userName').textContent = user.firstName + ' ' + user.lastName;
        }

        // Load dashboard data
        async function loadDashboardData() {
            try {
                // Load user tickets
                const ticketsResponse = await MultiBilleterie.apiRequest('/tickets');
                if (ticketsResponse.success) {
                    const tickets = ticketsResponse.data.tickets;
                    
                    // Update stats
                    document.getElementById('activeTickets').textContent = 
                        tickets.filter(t => t.status === 'active').length;
                    
                    const totalSpent = tickets.reduce((sum, ticket) => sum + ticket.ticketType.price, 0);
                    document.getElementById('totalSpent').textContent = 
                        new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(totalSpent);
                    
                    // Display recent tickets
                    displayRecentTickets(tickets.slice(0, 5));
                }

                // Load upcoming events (mock data for now since we don't have MongoDB)
                displayRecommendedEvents();
                
            } catch (error) {
                console.error('Error loading dashboard data:', error);
                displayOfflineMode();
            }
        }

        function displayRecentTickets(tickets) {
            const container = document.getElementById('recentTickets');
            
            if (tickets.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-4">
                        <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Aucun ticket trouvé</p>
                        <a href="/events" class="btn btn-primary">
                            <i class="fas fa-search me-2"></i>
                            Découvrir les événements
                        </a>
                    </div>
                `;
                return;
            }

            container.innerHTML = tickets.map(ticket => `
                <div class="d-flex align-items-center border-bottom py-3">
                    <div class="flex-shrink-0">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" 
                             style="width: 50px; height: 50px;">
                            <i class="fas fa-ticket-alt"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-1">${ticket.event?.title || 'Événement'}</h6>
                        <p class="mb-1 text-muted">
                            <small>
                                <i class="fas fa-calendar me-1"></i>
                                ${new Date(ticket.purchaseDate).toLocaleDateString('fr-FR')}
                            </small>
                        </p>
                        <span class="badge bg-${ticket.status === 'active' ? 'success' : 'secondary'}">
                            ${ticket.status === 'active' ? 'Actif' : ticket.status}
                        </span>
                    </div>
                    <div class="flex-shrink-0">
                        <strong>${MultiBilleterie.formatPrice(ticket.ticketType.price)}</strong>
                    </div>
                </div>
            `).join('');
        }

        function displayRecommendedEvents() {
            const container = document.getElementById('recommendedEvents');
            
            // Mock recommended events
            const mockEvents = [
                {
                    id: '1',
                    title: 'Concert Jazz Festival',
                    date: new Date(Date.now() + 7 * 24 * 60 * 60 * 1000),
                    venue: 'Salle Pleyel',
                    price: 45,
                    category: 'concert'
                },
                {
                    id: '2',
                    title: 'Théâtre : Le Misanthrope',
                    date: new Date(Date.now() + 14 * 24 * 60 * 60 * 1000),
                    venue: 'Comédie Française',
                    price: 35,
                    category: 'theatre'
                },
                {
                    id: '3',
                    title: 'Match PSG vs Lyon',
                    date: new Date(Date.now() + 21 * 24 * 60 * 60 * 1000),
                    venue: 'Parc des Princes',
                    price: 80,
                    category: 'sport'
                }
            ];

            container.innerHTML = `
                <div class="row">
                    ${mockEvents.map(event => `
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="card-title">${event.title}</h6>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            ${event.date.toLocaleDateString('fr-FR')}
                                            <br>
                                            <i class="fas fa-map-marker-alt me-1"></i>
                                            ${event.venue}
                                        </small>
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="h6 text-primary mb-0">
                                            ${MultiBilleterie.formatPrice(event.price)}
                                        </span>
                                        <button class="btn btn-sm btn-outline-primary">
                                            Voir détails
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        function displayOfflineMode() {
            document.getElementById('recentTickets').innerHTML = `
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Mode démo - Base de données non connectée
                </div>
            `;
            displayRecommendedEvents();
        }

        // Load dashboard data on page load
        document.addEventListener('DOMContentLoaded', loadDashboardData);
    </script>
</body>
</html>