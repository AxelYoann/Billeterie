            border-radius: 10px;
            margin-bottom: 1rem;
            overflow: hidden;
        }
        
        .faq-header {
            background: #f8f9fa;
            padding: 1rem 1.5rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        
        .faq-header:hover {
            background: #e9ecef;
        }
        
        .faq-content {
            padding: 1.5rem;
            display: none;
        }
        
        .social-links a {
            display: inline-block;
            width: 40px;
            height: 40px;
            background: var(--bs-primary);
            color: white;
            text-align: center;
            line-height: 40px;
            border-radius: 50%;
            margin: 0 0.5rem;
            transition: all 0.3s ease;
        }
        
        .social-links a:hover {
