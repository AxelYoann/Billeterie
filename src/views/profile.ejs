    <script>
        // Profile form submission
        document.getElementById('profileForm').addEventListener('submit', function(e) {
            e.preventDefault();
            MultiBilleterie.showNotification('Profil mis à jour avec succès!', 'success');
        });

        // Change password
        function changePassword() {
            const currentPassword = document.getElementById('currentPassword').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (!currentPassword || !newPassword || !confirmPassword) {
                MultiBilleterie.showNotification('Veuillez remplir tous les champs', 'error');
                return;
            }

            if (newPassword !== confirmPassword) {
                MultiBilleterie.showNotification('Les mots de passe ne correspondent pas', 'error');
                return;
            }

            if (newPassword.length < 8) {
                MultiBilleterie.showNotification('Le mot de passe doit contenir au moins 8 caractères', 'error');
                return;
            }

            // Simulate API call
            MultiBilleterie.showNotification('Changement du mot de passe...', 'info');
            setTimeout(() => {
                MultiBilleterie.showNotification('Mot de passe changé avec succès!', 'success');
                bootstrap.Modal.getInstance(document.getElementById('changePasswordModal')).hide();
                document.getElementById('changePasswordForm').reset();
            }, 1500);
        }

        // Confirm account deletion
        function confirmAccountDeletion() {
            if (confirm('Êtes-vous absolument sûr de vouloir supprimer votre compte ? Cette action est irréversible.')) {
                if (confirm('Toutes vos données seront perdues. Tapez "SUPPRIMER" pour confirmer:')) {
                    const confirmation = prompt('Tapez "SUPPRIMER" pour confirmer:');
                    if (confirmation === 'SUPPRIMER') {
                        MultiBilleterie.showNotification('Suppression du compte en cours...', 'info');
                        setTimeout(() => {
                            MultiBilleterie.showNotification('Compte supprimé. Au revoir!', 'success');
                            setTimeout(() => {
                                window.location.href = '/';
                            }, 2000);
                        }, 2000);
                    }
                }
            }
        }

        // Two-factor authentication toggle
        document.getElementById('twoFactorAuth').addEventListener('change', function() {
            if (this.checked) {
                MultiBilleterie.showNotification('Authentification à deux facteurs activée', 'success');
            } else {
                MultiBilleterie.showNotification('Authentification à deux facteurs désactivée', 'warning');
            }
        });

        // Logout function
        function logout() {
            if (confirm('Êtes-vous sûr de vouloir vous déconnecter ?')) {
                MultiBilleterie.showNotification('Déconnexion en cours...', 'info');
                setTimeout(() => {
                    window.location.href = '/';
                }, 1000);
            }
        }

        // Initialize page
