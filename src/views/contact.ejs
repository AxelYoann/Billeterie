        <div class="row">
            <!-- Contact Form -->
            <div class="col-lg-8 mb-5">
                <div class="card contact-card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-paper-plane me-2"></i>
                            Envoyez-nous un message
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <form id="contactForm">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="firstName" required>
                                        <label for="firstName">Prénom *</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="lastName" required>
                                        <label for="lastName">Nom *</label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-floating">
                                        <input type="email" class="form-control" id="email" required>
                                        <label for="email">Email *</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-floating">
                                        <input type="tel" class="form-control" id="phone">
                                        <label for="phone">Téléphone</label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <div class="form-floating">
                                    <select class="form-select" id="subject" required>
                                        <option value="">Choisir un sujet...</option>
                                        <option value="general">Question générale</option>
                                        <option value="technical">Support technique</option>
                                        <option value="billing">Facturation</option>
                                        <option value="partnership">Partenariat</option>
                                        <option value="complaint">Réclamation</option>
                                        <option value="other">Autre</option>
                                    </select>
                                    <label for="subject">Sujet *</label>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <div class="form-floating">
                                    <textarea class="form-control" id="message" style="height: 150px" required></textarea>
                                    <label for="message">Message *</label>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="newsletter">
                                    <label class="form-check-label" for="newsletter">
                                        Je souhaite recevoir la newsletter avec les derniers événements
                                    </label>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="privacy" required>
                                    <label class="form-check-label" for="privacy">
                                        J'accepte les <a href="/privacy" target="_blank">conditions d'utilisation</a> et la politique de confidentialité *
