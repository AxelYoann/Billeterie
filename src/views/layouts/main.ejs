<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= title %> | Multi-Billeterie</title>
    
    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/main.css" rel="stylesheet">
    
    <!-- Meta SEO -->
    <meta name="description" content="Plateforme de multi-billeterie moderne pour prestataires et clients">
    <meta name="keywords" content="billeterie, tickets, événements, spectacles, concerts">
    <meta name="author" content="Multi-Billeterie">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="fas fa-ticket-alt me-2"></i>
                Multi-Billeterie
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Spacer pour pousser les éléments à droite -->
                <div class="navbar-nav me-auto"></div>
                
                <!-- Navigation principale à droite -->
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-home me-1"></i>
                            Accueil
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/events">
                            <i class="fas fa-calendar-alt me-1"></i>
                            Événements
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/providers">
                            <i class="fas fa-building me-1"></i>
                            Prestataires
                        </a>
                    </li>
                    
                    <!-- Menu utilisateur conditionnel -->
                    <% if (typeof user !== 'undefined' && user) { %>
                        <!-- Utilisateur connecté -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-1"></i>
                                <%= user.firstName || user.email %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><h6 class="dropdown-header">
                                    <i class="fas fa-user me-1"></i>
                                    Espace Personnel
                                </h6></li>
                                <li><a class="dropdown-item" href="/dashboard">
                                    <i class="fas fa-tachometer-alt me-2"></i>Tableau de bord
                                </a></li>
                                <li><a class="dropdown-item" href="/tickets">
                                    <i class="fas fa-ticket-alt me-2"></i>Mes tickets
                                </a></li>
                                <li><a class="dropdown-item" href="/profile">
                                    <i class="fas fa-user-edit me-2"></i>Mon profil
                                </a></li>
                                
                                <% if (user.role === 'provider' || user.role === 'admin') { %>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header">
                                        <i class="fas fa-building me-1"></i>
                                        Espace Prestataire
                                    </h6></li>
                                    <li><a class="dropdown-item" href="/provider/dashboard">
                                        <i class="fas fa-chart-bar me-2"></i>Dashboard Prestataire
                                    </a></li>
                                    <li><a class="dropdown-item" href="/provider/events">
                                        <i class="fas fa-calendar-plus me-2"></i>Gérer mes événements
                                    </a></li>
                                    <li><a class="dropdown-item" href="/provider/analytics">
                                        <i class="fas fa-chart-line me-2"></i>Analytics
                                    </a></li>
                                <% } %>
                                
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="/auth/logout">
                                    <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                                </a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <!-- Utilisateur non connecté -->
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/login">
                                <i class="fas fa-sign-in-alt me-1"></i>
                                Connexion
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm ms-2" href="/auth/register">
                                <i class="fas fa-user-plus me-1"></i>
                                Inscription
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <div id="flash-messages"></div>

    <!-- Main Content -->
    <main class="main-content">
        <%- include('../' + page) %>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Multi-Billeterie</h5>
                    <p class="mb-0">Plateforme moderne de multi-billeterie pour tous vos événements.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="social-links">
                        <a href="#" class="text-light me-3"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-linkedin"></i></a>
                    </div>
                    <p class="mb-0 mt-2">&copy; <%= new Date().getFullYear() %> Multi-Billeterie. Tous droits réservés.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>