    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script>
        // Contact form submission
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const firstName = document.getElementById('firstName').value;
            const lastName = document.getElementById('lastName').value;
            const email = document.getElementById('email').value;
            const subject = document.getElementById('subject').value;
            const message = document.getElementById('message').value;
            const privacy = document.getElementById('privacy').checked;
            
            if (!firstName || !lastName || !email || !subject || !message || !privacy) {
                MultiBilleterie.showNotification('Veuillez remplir tous les champs obligatoires', 'error');
                return;
            }
            
            if (!isValidEmail(email)) {
                MultiBilleterie.showNotification('Veuillez saisir une adresse email valide', 'error');
                return;
            }
            
            // Simulate form submission
            MultiBilleterie.showNotification('Envoi du message en cours...', 'info');
            
            setTimeout(() => {
                MultiBilleterie.showNotification('Message envoyé avec succès! Nous vous répondrons sous 24h.', 'success');
                this.reset();
            }, 2000);
        });

        // FAQ toggle
        function toggleFaq(header) {
            const content = header.nextElementSibling;
            const icon = header.querySelector('i');
            
            if (content.style.display === 'block') {
                content.style.display = 'none';
                icon.classList.replace('fa-chevron-up', 'fa-chevron-down');
            } else {
                // Close all other FAQs
                document.querySelectorAll('.faq-content').forEach(c => {
                    c.style.display = 'none';
                });
                document.querySelectorAll('.faq-header i').forEach(i => {
                    i.classList.replace('fa-chevron-up', 'fa-chevron-down');
                });
                
                // Open clicked FAQ
                content.style.display = 'block';
                icon.classList.replace('fa-chevron-down', 'fa-chevron-up');
            }
        }

        // Email validation
        function isValidEmail(email) {
            return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            // Any initialization code here
        });
    </script>
