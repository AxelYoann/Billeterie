# ===========================================
# CONFIGURATION MULTI-BILLETERIE
# ===========================================

# Application
PORT=3000
NODE_ENV=development
APP_NAME="Multi-Billeterie"
APP_URL=http://localhost:3000

# Base de données MongoDB
MONGODB_URI=mongodb://localhost:27017/multi-billeterie
# Pour MongoDB Atlas : mongodb+srv://username:password@cluster.mongodb.net/multi-billeterie

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-must-be-at-least-32-characters-long
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (pour les notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="Multi-Billeterie <noreply@multi-billeterie.fr>"

# Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./public/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Stripe Configuration (pour les paiements)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_votre_cle_stripe_publique

# ===== UPLOAD DE FICHIERS =====
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./public/uploads

# ===== SÉCURITÉ =====
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== URLS =====
CLIENT_URL=http://localhost:3000
API_URL=http://localhost:3000/api